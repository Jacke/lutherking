# ==============================================
# ORATOR AI - Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ----------------------------------------------
# NextAuth Configuration
# ----------------------------------------------
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key-here-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# ----------------------------------------------
# Database
# ----------------------------------------------
DATABASE_URL=./storage/orator.sqlite

# ----------------------------------------------
# Stripe Payment Integration
# ----------------------------------------------
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Webhook secret (from Stripe CLI or Dashboard)
# For local testing: stripe listen --forward-to localhost:3000/api/payments/stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ----------------------------------------------
# Paddle Payment Integration (Optional)
# ----------------------------------------------
# Get these from: https://vendors.paddle.com/
PADDLE_VENDOR_ID=your-paddle-vendor-id
PADDLE_API_KEY=your-paddle-api-key
PADDLE_PUBLIC_KEY=your-paddle-public-key

# ----------------------------------------------
# AI Services
# ----------------------------------------------
# ElevenLabs API (for TTS/voice analysis)
# Get from: https://elevenlabs.io/app/settings
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# OpenAI API (for Whisper transcription + GPT analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
# Base URL for production deployment
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Node environment (development | production | test)
NODE_ENV=development
